<Window x:Class="CarDeadlineTracker.Views.CarDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Details" Height="600" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding SelectedCar.NumberPlate}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedCar.Make}" FontSize="18"/>
            <TextBlock Text="{Binding SelectedCar.Brand}" FontSize="18" Margin="0,0,0,10"/>
        
            <TabControl>
                <TabItem Header="Renewal Items">
                    <StackPanel>
                        <ListView ItemsSource="{Binding RenewalItems}" SelectedItem="{Binding SelectedRenewalItem}" Height="300">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding ItemName}" Width="150"/>
                                    <GridViewColumn Header="Renewal Date" DisplayMemberBinding="{Binding DateOfRenewal}" Width="150"/>
                                    <GridViewColumn Header="Expiration Date" DisplayMemberBinding="{Binding DateOfExpiry}" Width="150"/>
                                    <GridViewColumn Header="Cost" DisplayMemberBinding="{Binding Cost}" Width="100"/>
                                    <GridViewColumn Header="Notes" DisplayMemberBinding="{Binding Notes}" Width="300"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Content="Add Item" Command="{Binding AddRenewalItemCommand}" Height = "25" Margin="0,10,0,10"/>
                        <Button Content="Edit Item" Command="{Binding EditRenewalItemCommand}" Height = "25" Margin="0,10,0,10"/>
                        <Button Content="Delete Item" Command="{Binding DeleteRenewalItemCommand}" Height = "25" Margin="0,10,0,10"/>
                    </StackPanel>
                </TabItem>
                
                <TabItem Header="Repairs">
                    <StackPanel>
                        <ListView ItemsSource="{Binding RepairLogs}" SelectedItem="{Binding SelectedRepairLog}" Height="300">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding RepairName}" Width="150"/>
                                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding RepairDate}" Width="150"/>
                                    <GridViewColumn Header="Cost" DisplayMemberBinding="{Binding Cost}" Width="150"/>
                                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding RepairDescription}" Width="300"/>
                                    <GridViewColumn Header="Notes" DisplayMemberBinding="{Binding Notes}" Width="300"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Content="Add Item" Command="{Binding AddRepairCommand}" Height = "25" Margin="0,10,0,10"/>
                        <Button Content="Edit Item" Command="{Binding EditRepairCommand}" Height = "25" Margin="0,10,0,10"/>
                        <Button Content="Delete Item" Command="{Binding DeleteRepairCommand}" Height = "25" Margin="0,10,0,10"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>