<Window x:Class="CarDeadlineTracker.Views.CarDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Details" Height="600" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding SelectedCar.NumberPlate}" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedCar.Make}" FontSize="18"/>
            <TextBlock Text="{Binding SelectedCar.Brand}" FontSize="18" Margin="0,0,0,10"/>
            
            <TabControl>
                <TabItem Header="Documents">
                    <StackPanel>
                        <ListView ItemsSource="{Binding Documents}" Height="400">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding DocumentName}" Width="150"/>
                                    <GridViewColumn Header="Expiration Date" DisplayMemberBinding="{Binding ExpirationDate}" Width="150"/>
                                    <GridViewColumn Header="Renewal Date" DisplayMemberBinding="{Binding RenewalDate}" Width="150"/>
                                    <GridViewColumn Header="Renewal Cost" DisplayMemberBinding="{Binding RenewalCost}" Width="100"/>
                                    <GridViewColumn Header="Notes" DisplayMemberBinding="{Binding Notes}" Width="300"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Content="Add Document" Command="{Binding AddDocumentCommand}" Margin="0,10,0,0"/>
                    </StackPanel>
                </TabItem>
                
                <TabItem Header="Maintenance">
                    <StackPanel>
                        <ListView ItemsSource="{Binding MaintenanceRecords}" Height="400">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding MaintenanceName}" Width="150"/>
                                    <GridViewColumn Header="Expiration Date" DisplayMemberBinding="{Binding MaintenanceDate}" Width="150"/>
                                    <GridViewColumn Header="Renewal Date" DisplayMemberBinding="{Binding NextMaintenanceDueDate}" Width="150"/>
                                    <GridViewColumn Header="Notes" DisplayMemberBinding="{Binding Notes}" Width="300"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Content="Add Maintenance" Command="{Binding AddMaintenanceCommand}" Margin="0,10,0,0"/>
                    </StackPanel>
                </TabItem>
                
                <TabItem Header="Repairs">
                    <StackPanel>
                        <ListView ItemsSource="{Binding RepairLogs}" Height="400">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding RepairType}" Width="150"/>
                                    <GridViewColumn Header="Repair Date" DisplayMemberBinding="{Binding RepairDate}" Width="150"/>
                                    <GridViewColumn Header="RepairDescription" DisplayMemberBinding="{Binding RepairDescription}" Width="150"/>
                                    <GridViewColumn Header="Notes" DisplayMemberBinding="{Binding Notes}" Width="300"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Content="Add Repair" Command="{Binding AddRepairCommand}" Margin="0,10,0,0"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>