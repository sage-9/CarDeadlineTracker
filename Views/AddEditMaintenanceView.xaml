<Window x:Class="CarDeadlineTracker.Views.AddEditMaintenanceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Maintenance Record" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Maintenance Record Name:"/>
            <TextBox Text="{Binding MaintenanceRecord.MaintenanceName}"/>

            <Label Content="Expiration Date:"/>
            <DatePicker SelectedDate="{Binding MaintenanceRecord.MaintenanceDate}"/>

            <Label Content="Renewal Date:"/>
            <DatePicker SelectedDate="{Binding MaintenanceRecord.NextMaintenanceDueDate}"/>
            
            <Label Content="Notes:"/>
            <TextBox Text="{Binding MaintenanceRecord.Notes}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save" 
                        Command="{Binding SaveCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                        Margin="0,0,10,0"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>