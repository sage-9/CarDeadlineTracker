<Window x:Class="CarDeadlineTracker.Views.AddEditDocumentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Document" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Document Name:"/>
            <TextBox Text="{Binding Document.DocumentName}"/>

            <Label Content="Expiration Date:"/>
            <DatePicker SelectedDate="{Binding Document.ExpirationDate}"/>

            <Label Content="Renewal Date:"/>
            <DatePicker SelectedDate="{Binding Document.RenewalDate}"/>

            <Label Content="Renewal Cost:"/>
            <TextBox Text="{Binding Document.RenewalCost}"/>
            
            <Label Content="Notes:"/>
            <TextBox Text="{Binding Document.Notes}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save" 
                        Command="{Binding SaveCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                        Margin="0,0,10,0"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>